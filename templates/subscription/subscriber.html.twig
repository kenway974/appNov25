{% extends 'base.html.twig' %}

{% block title %}Mon abonnement{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 text-center">
    <h1 class="text-3xl font-semibold mb-6">Ton abonnement actuel</h1>

    <div class="border rounded-lg p-6 shadow w-full md:w-1/2 mx-auto">
        <h2 class="text-xl font-bold mb-2">{{ subscription.plan.title }}</h2>
        <p class="text-gray-600 mb-4">{{ subscription.plan.description }}</p>
        <p class="text-2xl font-semibold text-indigo-600 mb-4">{{ subscription.plan.price }} €</p>
        <p class="text-sm text-gray-500 mb-2">Statut : <strong>{{ subscription.status }}</strong></p>
        <p class="text-sm text-gray-500 mb-2">Début : {{ subscription.startDate|date('d/m/Y') }}</p>
        <p class="text-sm text-gray-500 mb-2">Fin : {{ subscription.endDate|date('d/m/Y') }}</p>
        {% if subscription.isRecurring %}
            <p class="text-green-600 font-semibold">Renouvellement automatique activé ✅</p>
        {% else %}
            <p class="text-gray-400">Renouvellement automatique désactivé</p>
        {% endif %}
    </div>
</div>
{% endblock %}
