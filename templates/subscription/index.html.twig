{% extends 'base.html.twig' %}

{% block title %}Choisir un abonnement{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 text-center">
    <h1 class="text-3xl font-semibold mb-6">Choisis ton plan d'abonnement</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {% for plan in plans %}
            <div class="border rounded-lg p-6 shadow hover:shadow-lg transition">
                <h2 class="text-xl font-bold mb-2">{{ plan.title }}</h2>
                <p class="text-gray-600 mb-4">{{ plan.description }}</p>
                <p class="text-2xl font-semibold text-indigo-600 mb-4">{{ plan.price }} €</p>
                {% if plan.features %}
                    <ul class="text-left mb-4">
                        {% for feature in plan.features %}
                            <li>✅ {{ feature }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <a href="#" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Souscrire</a>
            </div>
        {% else %}
            <p>Aucun plan disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
