<form action="{{ path('app_dashboard') }}" method="POST" class="mb-3">
    <!-- Identifiants pour le contrôleur -->
    <input type="hidden" name="user_action[needId]" value="{{ userNeed.id }}">
    <input type="hidden" name="user_action[actionId]" value="{{ action.id }}">

    <p><strong>{{ action.title }}</strong></p>

    <div class="mb-2" id="startDateField-{{ userNeed.id }}-{{ action.id }}" style="display:block;">
        <label for="startDate-{{ userNeed.id }}-{{ action.id }}">Date de début</label>
        <input type="date" id="startDate-{{ userNeed.id }}-{{ action.id }}" 
               name="user_action[startDate]" class="form-control">
    </div>

    <div class="mb-2" id="frequencyField-{{ userNeed.id }}-{{ action.id }}" style="display:block;">
        <label for="frequency-{{ userNeed.id }}-{{ action.id }}">Fréquence</label>
        <input type="number" id="frequency-{{ userNeed.id }}-{{ action.id }}" 
               name="user_action[frequency]" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
